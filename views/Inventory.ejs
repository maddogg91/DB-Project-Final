<!DOCTYPE html>
<html lang="en">
<head>
	<title>Inventory</title>
	 <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
	</style>
	<script>
		
	</script>
</head>
<body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<h2 style="text-align:center">Inventory View </h2>
	<br>
	<br>
	<h4> All inventory for the selected location: </h4>
	<ul>
	<% chairs.forEach(function(chair) { %>
		<li>
			<strong><%= chair.chairName %></strong>
			<br>
			<strong>Type:</strong> <%= chair.inventoryType %>
			<br>
			<%= chair.chairDesc %>
			<br>
			Quantity On Hand: <%= chair.quantityOnHand %>
			<br>
			Rented: <%= chair.quantityRented %>
		</li>
		<br>
		  <% }); %>
		  </ul>
		  <ul>
	<% canopy.forEach(function(c) { %>
		<li>
			<strong><%= c.canopyName %></strong>
			<br>
			<strong>Type:</strong> <%= c.inventoryType %>
			<br>
			<%= c.canopyDesc %>
			<br>
			Quantity On Hand: <%= c.quantityOnHand %>
			<br>
			Rented: <%= c.quantityRented %>
		</li>
		<br>
		  <% }); %>
		  </ul>
		  <ul>
	<% tables.forEach(function(table) { %>
		<li>
			<strong><%= table.tableName %></strong>
			<br>
			<strong>Type:</strong> <%= table.inventoryType %>
			<br>
			<%= table.tableDesc %>
			<br>
			Quantity On Hand: <%= table.quantityOnHand %>
			<br>
			Rented: <%= table.quantityRented %>
		</li>
		<br>
		  <% }); %>
		  </ul>
</body>
</html>